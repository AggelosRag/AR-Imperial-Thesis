{
    "name": "leakage_inspection_reduced_concepts",
    "n_gpu": 1,

    "arch": {
        "type": "MNISTCBMwithDTaslabelPredictorArchitecture",
        "args": {}
    },
    "model": {
        "xc_lr": 0.001,
        "xc_weight_decay": 0,
        "cy_lr": 0.001,
        "cy_weight_decay": 0
    },
    "dataset": {
        "num_classes": 3,
        "num_concepts": 9,
        "concept_names": ["thickness_small", "thickness_medium", "thickness_xlarge",
                         "width_small", "width_medium", "width_xlarge",
                         "length_small", "length_medium", "length_xlarge"],
        "class_names": ["7", "8", "9"],
        "contour_plot": false,
        "use_attribute_imbalance": false
    },
    "data_loader": {
        "type": "get_mnist_dataLoader",
        "args":{
            "data_dir": "./datasets/MNIST",
            "type": "SGD",
            "batch_size": 206
        }
    },
    "trainer": {
        "type": "LeakageInspectionTrainer",
        "hard_cbm": true,
        "args": {},
        "xc_epochs": 30,
        "cy_epochs": 100,
        "save_dir": "saved/",
        "save_period": 1000,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 0,
        "tensorboard": true
    },
    "regularisation": {
        "type": "L2",
        "min_samples_leaf": 50,
        "snapshot_epochs": 50
    }
}
